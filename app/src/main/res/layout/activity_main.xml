<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/the_movie_database_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        app:tabInlineLabel="true"
        app:tabTextAppearance="@style/TabTextAppearence"
        app:tabTextColor="@color/tab_data_color"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/latest_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latest"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/most_popular_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/most_popular" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/top_rated_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_rated"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movie_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>